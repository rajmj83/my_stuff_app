<%= "This is a sample ruby on rails application..." %>
<% @the_web_page_title = "Category List" %>

<div class="category list">
  <h2>Categories List</h2>

 <%= link_to("Add New Category", {:action => 'new'}, :class => 'action new') %>
 <div><%= pluralize(@categories.size, 'category') %> found </div>

  <table border="1" class="listing">
    <tr class="header">
      <th>Category</th>
      <th>Category-Symbol</th>
      <th>Actions</th>
    </tr>
    <% @categories.each do |category| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= category.name %></td>
      <td><%= category.symbol %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => category.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => category.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => category.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
